/dts-v1/;

/ {
    #address-cells = <1>;
    #size-cells = <1>;
    model = "mlogv32";
    chassis-type = "embedded";

    chosen {
        // SBI: console=hvc
        // UART0: console=ttyS0
        // for debugging: kgdboc_earlycon=sbi kgdboc=ttyS0 kgdbwait
        bootargs = "earlycon=sbi console=ttyS0";
        stdout-path = &uart0;
    };

    rom@0 {
        compatible = "mtd-rom";
        reg = <0x0 (16*1024*1024)>;
        bank-width = <1>; // 8-bit "bus"

        #address-cells = <1>;
        #size-cells = <1>;

        rootfs@1000 {
            label = "rootfs";
            reg = <0x1000 (16*1024*1024 - 0x1000)>;
            linux,rootfs;
        };
    };

    memory@80000000 {
        device_type = "memory";
        // the last 256K are reserved for OpenSBI
        reg = <0x80000000 (14*1024*1024 - 256*1024)>;
    };

    cpus {
        #address-cells = <1>;
        #size-cells = <0>;
        timebase-frequency = <1000>;

        cpu@0 {
            device_type = "cpu";
            compatible = "riscv";
            mmu-type = "riscv,sv32";
            reg = <0>; // hart id
            riscv,isa-base = "rv32i";
            riscv,isa-extensions =
                "i",
                "m",
                "a",
                "zicntr",
                "zicsr",
                "zifencei",
                "zihintpause",
                "sstc",
                "svade";

            cpu0_intc: interrupt-controller {
                compatible = "riscv,cpu-intc";
                #interrupt-cells = <1>;
                interrupt-controller;
            };
        };
    };

    timer {
        compatible = "riscv,timer";
        interrupts-extended = <&cpu0_intc 5>;
    };

    intc: interrupt-controller {
        compatible = "mlogv32,cpu-intc";
        #interrupt-cells = <1>;
        interrupt-controller;
        interrupts-extended = <&cpu0_intc 11>;
    };

    soc {
        #address-cells = <1>;
        #size-cells = <1>;
        compatible = "simple-bus";
        ranges;

        uart0: serial@f0000010 {
            compatible = "ns16550a";
            reg = <0xf0000010 0x20>;
            reg-shift = <2>;
            interrupts-extended = <&intc 11>;
            clock-frequency = <(38400*16)>;
            fifo-size = <253>;
            no-loopback-test;
            // TODO: https://github.com/torvalds/linux/blob/8c2e52ebbe885c7eeaabd3b7ddcdc1246fc400d2/drivers/tty/serial/8250/8250_of.c#L233
        };

        uart1: serial@f0000030 {
            compatible = "ns16550a";
            reg = <0xf0000030 0x20>;
            reg-shift = <2>;
            interrupts-extended = <&intc 11>;
            clock-frequency = <(38400*16)>;
            fifo-size = <253>;
            no-loopback-test;
        };

        uart2: serial@f0000050 {
            compatible = "ns16550a";
            reg = <0xf0000050 0x20>;
            reg-shift = <2>;
            interrupts-extended = <&intc 11>;
            clock-frequency = <(38400*16)>;
            fifo-size = <253>;
            no-loopback-test;
        };

        uart3: serial@f0000070 {
            compatible = "ns16550a";
            reg = <0xf0000070 0x20>;
            reg-shift = <2>;
            interrupts-extended = <&intc 11>;
            clock-frequency = <(38400*16)>;
            fifo-size = <253>;
            no-loopback-test;
        };

        syscon: syscon@fffffff0 {
            compatible = "syscon";
            reg = <0xfffffff0 0x4>;
        };

        poweroff {
            compatible = "syscon-poweroff";
            regmap = <&syscon>;
            offset = <0x0>;
            value = <0x2>;
        };

        reboot {
            compatible = "syscon-reboot";
            regmap = <&syscon>;
            offset = <0x0>;
            value = <0x1>;
        };
    };
};
